<%# _ means partial that is used to resuse componenets. %>


<%= render "header" %>
<h1>Todo</h1>
<div class="col-6" style="margin: 0 auto;">
<form method="POST" action="/add">

<%= token_tag %>
<div class="mb-3">
  <label for="titleid" class="form-label">Title</label>
  <input name= "title" type="text" class="form-control" id="titleid">
</div>
<div class="mb-3">
  <label for="descid" class="form-label">Description</label>
  <textarea name="description" class="form-control" id="descid" rows="3"></textarea>
</div>
<div class="mb-3">
<input type="submit" class="btn btn-primary" value="Add" style="display: block; margin: 0 auto;"/>
</div>
</form>
</div>

<% @posts.each do |post| %>
<div class="card my-5" style="width: 18rem; margin:0 auto;">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= post.description %></p>

<form accept-charset="UTF-8" action="/deleteTask/<%= post.id %>" method="delete"> 
  <button type="submit" class="btn btn-danger" style="margin:0 auto" name="button">Delete</button>
</form>

    <a class="btn btn-warning my-2" aria-current="page" href="/update/<%= post.id %>">Update</a>

  </div>
</div>
<% end %>
<%= render "footer" %>
